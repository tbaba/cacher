<p id="notice"><%= notice %></p>

<div id="<%= dom_id(@post) %>">
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
</div>

<div id="<%= dom_id(@post) %>_comments">
  <%= form_with(scope: :comment, url: post_comments_path(@post)) do |f| %>
    <%= f.text_area :body %>
    <%= f.button '送信', type: 'submit' %>
  <% end %>
  <% @post.comments.each do |comment| %>
    <div id="<%= dom_id(@post, comment) %>">
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
